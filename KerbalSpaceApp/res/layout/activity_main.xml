<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!--
         As the main content view, the view below consumes the entire
         space available using match_parent in both dimensions.
    -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageButtonKerbol"
                android:layout_width="85dp"
                android:layout_height="104dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:contentDescription="@string/Kerbol"
                android:onClick="goKerbol"
                android:src="@drawable/kerbol" />

            <ImageView
                android:id="@+id/imageButtonMoho"
                android:layout_width="85dp"
                android:layout_height="104dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/imageButtonKerbol"
                android:contentDescription="@string/Moho"
                android:onClick="goMoho"
                android:src="@drawable/moho" />

            <ImageView
                android:id="@+id/imageButtonEve"
                android:layout_width="85dp"
                android:layout_height="104dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/imageButtonMoho"
                android:contentDescription="@string/Eve"
                android:onClick="goEve"
                android:src="@drawable/eve" />

            <ImageView
                android:id="@+id/imageButtonGilly"
                android:layout_width="55dp"
                android:layout_height="67dp"
                android:layout_alignBottom="@+id/imageButtonEve"
                android:layout_toRightOf="@+id/imageButtonEve"
                android:contentDescription="@string/Gilly"
                android:onClick="goGilly"
                android:scaleType="fitCenter"
                android:src="@drawable/gilly" />

            <ImageView
                android:id="@+id/imageButtonKerbin"
                android:layout_width="85dp"
                android:layout_height="104dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/imageButtonEve"
                android:contentDescription="@string/Kerbin"
                android:onClick="goKerbin"
                android:src="@drawable/kerbin" />

            <ImageView
                android:id="@+id/imageButtonMun"
                android:layout_width="55dp"
                android:layout_height="67dp"
                android:layout_alignBottom="@+id/imageButtonKerbin"
                android:layout_toRightOf="@+id/imageButtonKerbin"
                android:contentDescription="@string/Mun"
                android:onClick="goMun"
                android:scaleType="fitCenter"
                android:src="@drawable/mun" />

            <ImageView
                android:id="@+id/imageButtonMinmus"
                android:layout_width="55dp"
                android:layout_height="67dp"
                android:layout_alignBottom="@+id/imageButtonKerbin"
                android:layout_toRightOf="@+id/imageButtonMun"
                android:contentDescription="@string/Minmus"
                android:onClick="goMinmus"
                android:scaleType="fitCenter"
                android:src="@drawable/minmus" />

            <ImageView
                android:id="@+id/imageButtonDuna"
                android:layout_width="85dp"
                android:layout_height="104dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/imageButtonKerbin"
                android:contentDescription="@string/Duna"
                android:onClick="goDuna"
                android:src="@drawable/duna" />

            <ImageView
                android:id="@+id/imageButtonIke"
                android:layout_width="55dp"
                android:layout_height="67dp"
                android:layout_alignBottom="@+id/imageButtonDuna"
                android:layout_toRightOf="@+id/imageButtonDuna"
                android:contentDescription="@string/Ike"
                android:onClick="goIke"
                android:scaleType="fitCenter"
                android:src="@drawable/ike" />

            <ImageView
                android:id="@+id/imageButtonDres"
                android:layout_width="85dp"
                android:layout_height="104dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/imageButtonDuna"
                android:contentDescription="@string/Dres"
                android:onClick="goDres"
                android:src="@drawable/dres" />

            <ImageView
                android:id="@+id/imageButtonJool"
                android:layout_width="85dp"
                android:layout_height="104dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/imageButtonDres"
                android:contentDescription="@string/Jool"
                android:onClick="goJool"
                android:src="@drawable/jool" />

            <ImageView
                android:id="@+id/imageButtonLaythe"
                android:layout_width="55dp"
                android:layout_height="67dp"
                android:layout_alignBottom="@+id/imageButtonJool"
                android:layout_toRightOf="@+id/imageButtonJool"
                android:contentDescription="@string/Laythe"
                android:onClick="goLaythe"
                android:scaleType="fitCenter"
                android:src="@drawable/laythe" />

            <ImageView
                android:id="@+id/imageButtonVall"
                android:layout_width="55dp"
                android:layout_height="67dp"
                android:layout_alignBottom="@+id/imageButtonJool"
                android:layout_toRightOf="@+id/imageButtonLaythe"
                android:contentDescription="@string/Vall"
                android:onClick="goVall"
                android:scaleType="fitCenter"
                android:src="@drawable/vall" />

            <ImageView
                android:id="@+id/imageButtonTylo"
                android:layout_width="55dp"
                android:layout_height="67dp"
                android:layout_alignBottom="@+id/imageButtonJool"
                android:layout_toRightOf="@+id/imageButtonVall"
                android:contentDescription="@string/Tylo"
                android:onClick="goTylo"
                android:scaleType="fitCenter"
                android:src="@drawable/tylo" />

            <ImageView
                android:id="@+id/imageButtonBop"
                android:layout_width="55dp"
                android:layout_height="67dp"
                android:layout_alignBottom="@+id/imageButtonJool"
                android:layout_toRightOf="@+id/imageButtonTylo"
                android:contentDescription="@string/Bop"
                android:onClick="goBop"
                android:scaleType="fitCenter"
                android:src="@drawable/bop" />

            <ImageView
                android:id="@+id/imageButtonPol"
                android:layout_width="55dp"
                android:layout_height="67dp"
                android:layout_alignBottom="@+id/imageButtonJool"
                android:layout_toRightOf="@+id/imageButtonBop"
                android:contentDescription="@string/Pol"
                android:onClick="goPol"
                android:scaleType="fitCenter"
                android:src="@drawable/pol" />

            <ImageView
                android:id="@+id/imageButtonEeloo"
                android:layout_width="85dp"
                android:layout_height="104dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/imageButtonJool"
                android:contentDescription="@string/Eeloo"
                android:onClick="goEeloo"
                android:src="@drawable/eeloo" />
        </RelativeLayout>
    </ScrollView>

    <!--
         android:layout_gravity="start" tells DrawerLayout to treat
         this as a sliding drawer on the left side for left-to-right
         languages and on the right side for right-to-left languages.
         The drawer is given a fixed width in dp and extends the full height of
         the container. A solid background is used for contrast
         with the content view.
    -->

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/drawer_gradient"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:textColor="#fff" />

</android.support.v4.widget.DrawerLayout>